{
  "name": "moodbooms",
  "version": "1.0.0",
  "main": "electron/main.js",
  "homepage": "./",
  "scripts": {
    "start": "BROWSER=none react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "electron-dev": "wait-on http://localhost:3000 && ELECTRON_DEV=true REACT_DEV_URL=true electron .",
    "dev": "concurrently \"npm run start\" \"npm run electron-dev\"",
    "app": "npm run build && npm run electron",
    "check": "node check-menu.js",
    "e2e": "playwright test",
    "e2e:headed": "playwright test --headed",
    "e2e:debug": "playwright test --debug",
    "e2e:ui": "playwright test --ui",
    "e2e:report": "playwright show-report e2e/test-results/html",
    "e2e:setup": "playwright test e2e/tests/01-first-time-setup.e2e.js",
    "e2e:daily": "playwright test e2e/tests/02-daily-usage.e2e.js",
    "e2e:data": "playwright test e2e/tests/03-data-management.e2e.js",
    "e2e:visual": "playwright test e2e/tests/04-visual-regression.e2e.js",
    "e2e:perf": "playwright test e2e/tests/05-performance.e2e.js"
  },
  "dependencies": {
    "concurrently": "^8.2.0",
    "date-fns": "^4.1.0",
    "electron-store": "^8.1.0",
    "lucide": "^0.526.0",
    "lucide-react": "^0.263.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "^5.0.1"
  },
  "devDependencies": {
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
    "@playwright/test": "^1.54.2",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "autoprefixer": "^10.4.16",
    "canvas": "^2.11.2",
    "cross-env": "^7.0.3",
    "electron": "^28.3.3",
    "electron-builder": "^24.0.0",
    "jest": "^27.5.1",
    "playwright": "^1.54.2",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.0",
    "wait-on": "^8.0.2"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}

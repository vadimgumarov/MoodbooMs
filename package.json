{
  "name": "moodbooms",
  "version": "1.0.0",
  "main": "electron/main.js",
  "homepage": "./",
  "scripts": {
    "start": "BROWSER=none react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "electron-dev": "wait-on http://localhost:3000 && ELECTRON_DEV=true REACT_DEV_URL=true electron .",
    "dev": "concurrently \"npm run start\" \"npm run electron-dev\"",
    "app": "npm run build && npm run electron",
    "check": "node check-menu.js",
    "dist": "npm run build && electron-builder",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:win": "npm run build && electron-builder --win",
    "dist:linux": "npm run build && electron-builder --linux",
    "dist:all": "npm run build && electron-builder -mwl"
  },
  "dependencies": {
    "@sentry/electron": "^6.9.0",
    "@sentry/react": "^10.2.0",
    "concurrently": "^8.2.0",
    "date-fns": "^4.1.0",
    "electron-store": "^8.1.0",
    "lucide": "^0.526.0",
    "lucide-react": "^0.263.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "^5.0.1"
  },
  "devDependencies": {
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
    "@electron/notarize": "^3.0.1",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "autoprefixer": "^10.4.16",
    "canvas": "^2.11.2",
    "cross-env": "^7.0.3",
    "electron": "^28.3.3",
    "electron-builder": "^24.0.0",
    "jest": "^27.5.1",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.0",
    "wait-on": "^8.0.2"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "com.moodbooms.app",
    "productName": "MoodbooMs",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "electron/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.lifestyle",
      "icon": "assets/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build-resources/entitlements.mac.plist",
      "entitlementsInherit": "build-resources/entitlements.mac.inherit.plist",
      "type": "distribution",
      "identity": "Developer ID Application: ${env.APPLE_DEVELOPER_NAME} (${env.APPLE_TEAM_ID})"
    },
    "dmg": {
      "sign": false
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico",
      "certificateFile": "${env.WINDOWS_CERT_FILE}",
      "certificatePassword": "${env.WINDOWS_CERT_PASSWORD}",
      "signingHashAlgorithms": [
        "sha256"
      ],
      "rfc3161TimeStampServer": "http://timestamp.digicert.com",
      "signDlls": true
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png",
      "category": "Utility"
    },
    "afterSign": "scripts/notarize.js",
    "publish": {
      "provider": "github",
      "releaseType": "release"
    }
  }
}

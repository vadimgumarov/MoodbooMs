{
  "name": "moodbooms",
  "version": "1.0.0",
  "description": "Menstrual cycle tracking app with humor and heart - Queen & King modes for different perspectives",
  "author": {
    "name": "MoodBooMs Team",
    "email": "hello@moodbooms.app"
  },
  "main": "build/electron/main.js",
  "homepage": "./",
  "scripts": {
    "start": "BROWSER=none react-scripts start",
    "build": "react-scripts build && cp -r electron build/",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "electron-dev": "wait-on http://localhost:3000 && ELECTRON_DEV=true REACT_DEV_URL=true electron .",
    "dev": "concurrently \"npm run start\" \"npm run electron-dev\"",
    "app": "npm run build && npm run electron",
    "check": "node check-menu.js",
    "build:mac": "npm run build && electron-builder --mac",
    "build:mac-simple": "npm run build && electron-builder --mac zip --publish=never",
    "build:mac-dmg": "npm run build && electron-builder --mac --publish=never",
    "build:mac-zip": "npm run build && electron-builder --mac --publish=never --config.mac.target=zip",
    "dist": "npm run build && electron-builder --mac --publish=never",
    "dist:all": "npm run build && electron-builder --mac --win --linux --publish=never"
  },
  "dependencies": {
    "concurrently": "^8.2.0",
    "date-fns": "^4.1.0",
    "electron-store": "^8.1.0",
    "lucide": "^0.526.0",
    "lucide-react": "^0.263.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "^5.0.1"
  },
  "devDependencies": {
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "autoprefixer": "^10.4.16",
    "canvas": "^2.11.2",
    "cross-env": "^7.0.3",
    "electron": "^28.3.3",
    "electron-builder": "^24.0.0",
    "jest": "^27.5.1",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.0",
    "wait-on": "^8.0.2"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "productName": "MoodBooMs",
    "appId": "com.moodbooms.app",
    "copyright": "Copyright Â© 2024 MoodBooMs",
    "buildVersion": "1.0.0",
    "asar": true,
    "extends": null,
    "directories": {
      "output": "dist",
      "buildResources": "build-resources"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "electron/assets/icons/",
        "to": "assets/icons/",
        "filter": ["**/*"]
      }
    ],
    "mac": {
      "category": "public.app-category.healthcare-fitness",
      "target": [
        {
          "target": "dmg",
          "arch": ["arm64"]
        },
        {
          "target": "zip", 
          "arch": ["arm64"]
        }
      ],
      "type": "distribution",
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "darkModeSupport": true,
      "minimumSystemVersion": "10.15.0"
    },
    "dmg": {
      "title": "Install ${productName}",
      "window": {
        "width": 540,
        "height": 380
      },
      "contents": [
        {
          "x": 140,
          "y": 200,
          "type": "file"
        },
        {
          "x": 400,
          "y": 200,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": "always",
      "createStartMenuShortcut": true,
      "installerIcon": "electron/assets/icons/icon32.png",
      "uninstallerIcon": "electron/assets/icons/icon32.png"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "electron/assets/icons/icon32.png",
      "publisherName": "MoodBooMs",
      "verifyUpdateCodeSignature": false
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "snap",
          "arch": ["x64"]
        }
      ],
      "icon": "electron/assets/icons/icon32.png",
      "category": "Utility",
      "desktop": {
        "Name": "MoodBooMs",
        "Comment": "Menstrual cycle tracking with humor",
        "Keywords": "health;cycle;tracking;period;fertility;",
        "StartupWMClass": "MoodBooMs"
      }
    },
    "publish": {
      "provider": "github",
      "owner": "vadimgumarov",
      "repo": "MoodbooMs"
    }
  }
}
